<% include partials/header.ejs %>

<main class="container">
    <h1>User</h1>
    <div class="panel panel-default">
        <% if (user.length > 0) { %>
        <div class="panel-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>Date Created</th>
                        <th>Date Updated</th>
                    </tr>
                </thead>
                </tbody>
                <% for (var i = 0; i < user.length; i++) { %>
                <tr>
                    <td>
                        <%= user[i].displayName %>
                    </td>
                    <td>
                        <%= user[i].email %>
                    </td>
                    <td>
                        <% var date = new Date(user[i].created);
                         var dateString = date.toDateString() + " " + date.toLocaleTimeString(); %>
                        <%= dateString %>
                    </td>
                    <td>
                        <% date = new Date(user[i].updated);
                         var dateString = date.toDateString() + " " + date.toLocaleTimeString(); %>
                        <%= dateString %>
                    </td>   
                </tr>
                <% } %>
                </tbody>
            </table>
        </div> <!-- panel-body -->
        <% } %>
    </div><!-- panel panel-default -->

<div class="col-sm-4">
        <form method="post">
            <fieldset class="form-group">
                <label for="email">Email: *</label>
                <input name="email" type="email" class="form-control" required value="<%= user[1].email %>" autofocus />
            </fieldset>
            <fieldset class="form-group">
                <label for="username">Username: *</label>
                <input name="username" type="text" class="form-control" required value="<%= user.username %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="password">Password: *</label>
                <input name="password" type="password" class="form-control" required value=""/>
            </fieldset>
            <fieldset class="form-group">
                <label for="displayName">Display Name: *</label>
                <input name="displayName" type="text" class="form-control" required value="<%= user.displayName %>"/>
            </fieldset>
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary" title="Update">
                    <i class="fa fa-pencil-square-o"></i> Update</button>
                </a>
                <a href="/user" title="Cancel"  class="btn btn-default">
                    <i class="fa fa-undo"></i>  Cancel
                </a>
            </fieldset>
        </form>
    </div>

</main>
